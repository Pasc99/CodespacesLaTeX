// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.2/containers/ubuntu
{
	"name": "LaTeX-Codespace-JP",
	"image": "texlive/texlive:latest",
	"remoteUser": "root",
	"features": {},
	"forwardPorts": [3000],
	"portsAttributes": {
		"3000": {
			"label": "Application",
			"onAutoForward": "silent",
			"protocol": "https"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"latex-workshop.latex.clean.fileTypes": [
					"*.aux",
					"*.bbl",
					"*.blg",
					"*.idx",
					"*.ind",
					"*.lof",
					"*.lot",
					"*.out",
					"*.toc",
					"*.acn",
					"*.acr",
					"*.alg",
					"*.glg",
					"*.glo",
					"*.gls",
					"*.ist",
					"*.fls",
					"*.log",
					"*.fdb_latexmk",
					"*.snm",
					"*.nav",
					"*.dvi",
					"*.synctex.gz"
				],
				"latex-workshop.latex.outDir": "./OUT",						// PDFの出力先
				"latex-workshop.showContextMenu":true,
				"latex-workshop.intellisense.package.enabled": true,		
				"latex-workshop.message.error.show": true,
				"latex-workshop.message.warning.show": false,
				"latex-workshop.latex.build.forceRecipeUsage": false,
				"latex-workshop.synctex.afterBuild.enabled": true,
				"latex-workshop.latex.autoClean.run": "onFailed",
				"latex-workshop.latex.clean.subfolder.enabled": true,
				"latex-workshop.latex.recipe.default": "lastUsed",
				"latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
				"latex-workshop.view.pdf.viewer": "tab",
				"latex-workshop.latex.pdfWatch.delay": 500,
				"latex-workshop.latex.watch.delay": 500,
				"latex-workshop.view.pdf.tab.openDelay": 1500,
				"latex-workshop.codespaces.portforwarding.openDelay": 20000,
				// 次の３つの行をコメントアウトして、PDFのダークモードを有効にする。
				//"latex-workshop.view.pdf.color.dark.pageColorsBackground": "#171717", // For Dark Viewer
				//"latex-workshop.view.pdf.color.dark.pageColorsForeground": "#FFFFFF", // For Dark Viewer
				//"latex-workshop.view.pdf.color.dark.backgroundColor": "#171717", 		// For Dark Viewer
				"latex-workshop.latex.recipes": [
					{
						"name": "Build with .latexmkrc",
						"tools": ["latexmk_rc_only"]
					},
					{
						"name": "XeLaTeX",
						"tools": [
							"xelatex"
						]
					},
					{
						"name": "PDFLaTeX",
						"tools": [
							"pdflatex"
						]
					},
					{
						"name": "BibTeX",
						"tools": [
							"bibtex"
						]
					},
					{
						"name": "LaTeXmk",
						"tools": [
							"latexmk"
						]
					},
					{
						"name": "xelatex -> bibtex -> xelatex*2",
						"tools": [
							"xelatex",
							"bibtex",
							"xelatex",
							"xelatex"
						]
					},
					{
						"name": "pdflatex -> bibtex -> pdflatex*2",
						"tools": [
							"pdflatex",
							"bibtex",
							"pdflatex",
							"pdflatex"
						]
					}
				],
				"latex-workshop.latex.tools": [
					{
						"name": "latexmk_rc_only",
						"command": "latexmk",
						"args": [
							"-silent",
							"-outdir=%OUTDIR%",
							"%DOC%"
						]
					},
					{
						"name": "xelatex",
						"command": "xelatex",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"%DOCFILE%"
						]
					},
					{
						"name": "pdflatex",
						"command": "pdflatex",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"%DOCFILE%"
						]
					},
					{
						"name": "latexmk",
						"command": "latexmk",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-pdf",
							"-outdir=%OUTDIR%",
							"%DOCFILE%"
						]
					},
					{
						"name": "bibtex",
						"command": "bibtex",
						"args": [
							"%DOCFILE%"
						]
					}
				],
				"latex-workshop.latexindent.path": "latexindent",
				"latex-workshop.latexindent.args": [
					"-c",
					"%DIR%/",
					"%TMPFILE%",
					"-l",
					"%DIR%/latexindent.yaml",
					"-r"
				],
				// 次をコメントアウトして、github　copilotを無効にする。
				"github.copilot.enable": {
					"*": true,
					"yaml": false,
					"plaintext": false,
					"markdown": true,
					"latex": true,
					"bibtex": false
				}
			},
			"extensions": [
				"James-Yu.latex-workshop",
				"GitHub.copilot",	// この行をコメントアウトして、github copilotを無効にする。
				"MS-CEINTL.vscode-language-pack-ja"
			]
		}
	}
}
